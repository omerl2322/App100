    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/woman">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="90dp"
            android:textSize="20sp"
            android:id="@+id/userName"
            android:layout_alignTop="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:layout_marginEnd="23dp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimaryDark" />

        <ImageButton
            android:layout_alignBottom="@+id/imageButton7"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageButton9"
            android:background="@drawable/mark"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_marginTop="44dp"
            android:background="@drawable/people"
            android:layout_below="@+id/locationButton1"
            android:layout_alignStart="@+id/locationButton1"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:elevation="1dp"
            android:background="@drawable/home"
            android:layout_weight="0.06"
            android:layout_marginLeft="30dp"
            android:layout_row="2"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_column="1"
            android:layout_below="@+id/userName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ImageButton
            android:id="@+id/locationButton1"
            android:elevation="1dp"
            android:background="@drawable/car2"
            android:layout_weight="0.06"
            android:layout_marginLeft="30dp"
            android:layout_row="2"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_column="1"
            android:layout_width="100dp"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_height="102dp" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:background="@drawable/sound"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_alignEnd="@+id/textView" />

        <TextView
            android:text="עבירת רכוש"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_below="@+id/imageButton2"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|bold" />

        <TextView
            android:text="מטרד רעש"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_marginStart="18dp"
            android:layout_below="@+id/imageButton8"
            android:layout_alignStart="@+id/imageButton8"
            android:textStyle="normal|bold" />

        <TextView
            android:text="אחר"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton9"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView9"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="normal|bold" />

        <TextView
            android:text="תקלת תשתית"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_below="@+id/imageButton7"
            android:layout_toStartOf="@+id/imageButton2"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="normal|bold" />

        <TextView
            android:text="רכב"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_below="@+id/locationButton1"

            android:layout_marginEnd="10dp"
            android:id="@+id/textView11"
            android:paddingLeft="48dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/userName"
            android:layout_alignParentStart="true"></LinearLayout>

        <TextView
            android:text="שלום"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:paddingTop="90dp"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:textStyle="normal|bold"
            android:layout_marginEnd="9dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/phoneIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/phoneicon"
            android:elevation="1dp"
            android:layout_alignTop="@+id/userName"
            android:layout_alignStart="@+id/textView10"
            android:layout_marginTop="82dp" />

    </RelativeLayout>

</FrameLayout>
